_PORTAS=$(lsof -V -i tcp -P -n | grep "LISTEN" | cut -d: -f2 | cut -d' ' -f1 | uniq)
for _PORTA in ${_PORTAS[@]}; do
printf '%-10s%-10s%-10s\n' "Porta: " "${_PORTA}" "Aberta"
done
